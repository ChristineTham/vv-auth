---
export const prerender = true
import { getCollection } from 'astro:content'
// import { Image } from 'astro:assets'

import Layout from '../layouts/default.astro'
import CategoryGrid from '../components/categorygrid.astro'
import Posts from '../components/posts.astro'

const articles = await getCollection('post')
const sortedPosts = articles.sort((a, b) => +b.data.date - +a.data.date)

const title = 'Posts'
const description =
  'Here is a list of all our articles, reviews, photos of the day, arranged in descending order of date posted.'
---

<Layout {title} {description}>
  <div class="text-center py-12 px-6 mt-12">
    <h1 class="font-display font-bold text-5xl mb-6">{title}</h1>
    <p class="max-w-lg mx-auto">{description}</p>
  </div>

  <CategoryGrid />
  <Posts posts={sortedPosts} />
</Layout>
