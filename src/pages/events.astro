---
import Stripe from 'stripe'
import Layout from '../layouts/default.astro'

const stripe = new Stripe(import.meta.env.STRIPE_SECRET_KEY, {
  apiVersion: '2022-11-15',
})
const products = await stripe.products.list()
const events = products.data.filter(product => product.metadata.type == 'event')

const title = 'Events'
const description =
  'Join us for our next photography event.'
---

<Layout {title} {description}>
  <div class="text-center py-12 px-6 mt-12">
    <h1 class="font-display font-bold text-5xl mb-6">{title}</h1>
    <p class="max-w-lg mx-auto">{description}</p>
  </div>

  <div
    class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 pt-12 pb-24" id="events">
    {
      events.map((event) => (
        <div>
          {event.images && (
              <img
                src={event.images[0]}
                alt={event.name}
                class="w-full h-52 md:h-64 lg:h-96 xl:h-64 object-cover"
              />
          )}

          <div class="bg-gray-50 p-8">
            <div class="text-xs text-gray-600 uppercase font-semibold">
              Event
            </div>
            <h2 class="mt-3 text-3xl mb-6 font-display text-black leading-tight max-w-sm">
              {event.name}
            </h2>
            {event.description && (
              <p class="mt-4 max-w-md">{event.description}</p>
            )}
            <a
              href={'/event/' + event.id}
              class="flex items-center mt-6 uppercase text-sm text-black font-semibold">
              View Event
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </div>
      ))
    }
  </div>
  <script>
    fetch('/api/get-events', {
            method: 'POST',
            headers: {
              Authorization: `Bearer ${window.netlifyUser.token.access_token}`
            }
          })
            .then((res) => res.json())
            .then((events) => {
              window.location.href = link
            })
            .catch((err) => console.error(err))
  </script>
